<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F8F9FA">

    <!-- Main Content ScrollView -->
    <ScrollView
        android:id="@+id/scrollView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true"
        android:background="#F8F9FA"
        android:scrollbars="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="@dimen/screen_padding">

            <!-- Marquee Text - Plain without background -->
            <TextView
                android:id="@+id/tvMarquee"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="ðŸ“ Student Registration Portal - Fill Your Details Securely and Submit Documents Online - Quick and Easy Process ðŸ“"
                android:textSize="@dimen/text_medium"
                android:textStyle="bold"
                android:textColor="#1976D2"
                android:gravity="center"
                android:singleLine="true"
                android:ellipsize="marquee"
                android:marqueeRepeatLimit="marquee_forever"
                android:scrollHorizontally="true"
                android:focusable="true"
                android:focusableInTouchMode="true"
                android:freezesText="true"
                android:layout_marginTop="@dimen/margin_small"
                android:layout_marginBottom="@dimen/margin_medium" />

            <!-- Form Section -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <!-- Customer Name with Icon -->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="ðŸ‘¤ Full Name"
                    android:textSize="@dimen/text_medium"
                    android:textStyle="bold"
                    android:textColor="#2C3E50"
                    android:layout_marginBottom="@dimen/margin_small"
                    android:layout_marginStart="4dp" />

                <EditText
                    android:id="@+id/etCustomerName"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/input_height"
                    android:hint="Enter your full name"
                    android:inputType="textPersonName"
                    android:padding="@dimen/input_padding"
                    android:background="@drawable/input_field_enhanced"
                    android:textSize="@dimen/text_medium"
                    android:textColor="#1A1A1A"
                    android:textColorHint="#90A4AE"
                    android:layout_marginBottom="@dimen/margin_medium"
                    android:elevation="1dp" />

                <!-- ID Number with Icon -->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="ðŸ†” ID Number"
                    android:textSize="@dimen/text_medium"
                    android:textStyle="bold"
                    android:textColor="#2C3E50"
                    android:layout_marginBottom="@dimen/margin_small"
                    android:layout_marginStart="4dp" />

                <EditText
                    android:id="@+id/etIdNumber"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/input_height"
                    android:hint="Enter your ID number"
                    android:inputType="text"
                    android:padding="@dimen/input_padding"
                    android:background="@drawable/input_field_enhanced"
                    android:textSize="@dimen/text_medium"
                    android:textColor="#1A1A1A"
                    android:textColorHint="#90A4AE"
                    android:layout_marginBottom="@dimen/margin_medium"
                    android:elevation="1dp" />

                <!-- Email with Icon -->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="ðŸ“§ Email Address"
                    android:textSize="@dimen/text_medium"
                    android:textStyle="bold"
                    android:textColor="#2C3E50"
                    android:layout_marginBottom="@dimen/margin_small"
                    android:layout_marginStart="4dp" />

                <EditText
                    android:id="@+id/etEmail"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/input_height"
                    android:hint="your.email@example.com"
                    android:inputType="textEmailAddress"
                    android:padding="@dimen/input_padding"
                    android:background="@drawable/input_field_enhanced"
                    android:textSize="@dimen/text_medium"
                    android:textColor="#1A1A1A"
                    android:textColorHint="#90A4AE"
                    android:layout_marginBottom="@dimen/margin_medium"
                    android:elevation="1dp" />

                <!-- Phone Number with Icon -->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="ðŸ“± Phone Number"
                    android:textSize="@dimen/text_medium"
                    android:textStyle="bold"
                    android:textColor="#2C3E50"
                    android:layout_marginBottom="@dimen/margin_small"
                    android:layout_marginStart="4dp" />

                <EditText
                    android:id="@+id/etPhoneNumber"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/input_height"
                    android:hint="Enter 10-digit phone number"
                    android:inputType="phone"
                    android:maxLength="10"
                    android:padding="@dimen/input_padding"
                    android:background="@drawable/input_field_enhanced"
                    android:textSize="@dimen/text_medium"
                    android:textColor="#1A1A1A"
                    android:textColorHint="#90A4AE"
                    android:layout_marginBottom="@dimen/margin_large"
                    android:elevation="1dp" />

                <!-- Documents Section Header -->
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="ðŸ“Ž Upload Documents"
                    android:textSize="@dimen/text_large"
                    android:textStyle="bold"
                    android:textColor="#2C3E50"
                    android:layout_marginBottom="@dimen/margin_medium"
                    android:layout_marginStart="4dp" />

                <!-- PAN Document -->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="ðŸ“„ PAN Card (90-120 KB)"
                    android:textSize="@dimen/text_medium"
                    android:textStyle="bold"
                    android:textColor="#2C3E50"
                    android:layout_marginBottom="@dimen/margin_small"
                    android:layout_marginStart="4dp" />

                <Button
                    android:id="@+id/btnSelectPan"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/button_height"
                    android:text="ðŸ“¤ Choose PAN File"
                    android:textSize="@dimen/text_medium"
                    android:textAllCaps="false"
                    android:textStyle="bold"
                    android:textColor="#1976D2"
                    android:background="@drawable/button_outlined_blue"
                    android:layout_marginBottom="@dimen/margin_small"
                    android:elevation="1dp" />

                <TextView
                    android:id="@+id/tvPanFileName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="No file selected"
                    android:textSize="@dimen/text_small"
                    android:textColor="#5F6368"
                    android:textStyle="italic"
                    android:visibility="visible"
                    android:layout_marginBottom="@dimen/margin_medium"
                    android:layout_marginStart="8dp" />

                <!-- Aadhaar Document -->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="ðŸ“„ Aadhaar Card"
                    android:textSize="@dimen/text_medium"
                    android:textStyle="bold"
                    android:textColor="#2C3E50"
                    android:layout_marginBottom="@dimen/margin_small"
                    android:layout_marginStart="4dp" />

                <Button
                    android:id="@+id/btnSelectAadhaar"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/button_height"
                    android:text="ðŸ“¤ Choose Aadhaar File"
                    android:textSize="@dimen/text_medium"
                    android:textAllCaps="false"
                    android:textStyle="bold"
                    android:textColor="#1976D2"
                    android:background="@drawable/button_outlined_blue"
                    android:layout_marginBottom="@dimen/margin_small"
                    android:elevation="1dp" />

                <TextView
                    android:id="@+id/tvAadhaarFileName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="No file selected"
                    android:textSize="@dimen/text_small"
                    android:textColor="#5F6368"
                    android:textStyle="italic"
                    android:visibility="visible"
                    android:layout_marginStart="8dp"
                    android:layout_marginBottom="@dimen/margin_large" />

                <!-- Submit Button -->
                <Button
                    android:id="@+id/btnSubmit"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/button_height_large"
                    android:text="âœ… Submit Registration"
                    android:textSize="@dimen/text_large"
                    android:textAllCaps="false"
                    android:textStyle="bold"
                    android:textColor="#FFFFFF"
                    android:background="@drawable/button_submit_modern"
                    android:elevation="4dp"
                    android:layout_marginBottom="@dimen/margin_large" />

            </LinearLayout>

        </LinearLayout>
    </ScrollView>

    <!-- Loading Overlay (centered on screen) -->
    <RelativeLayout
        android:id="@+id/loadingOverlay"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#DD000000"
        android:visibility="gone"
        android:clickable="true"
        android:focusable="true">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center"
            android:layout_centerInParent="true"
            android:padding="@dimen/padding_xlarge">

            <ProgressBar
                android:id="@+id/progressBar"
                style="?android:attr/progressBarStyle"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:indeterminate="true"
                android:indeterminateTint="#FFFFFF"
                android:indeterminateTintMode="src_in" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Submitting..."
                android:textSize="@dimen/text_large"
                android:textStyle="bold"
                android:textColor="#FFFFFF"
                android:layout_marginTop="@dimen/margin_medium" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Please wait"
                android:textSize="@dimen/text_medium"
                android:textColor="#E3F2FD"
                android:layout_marginTop="@dimen/margin_small" />
        </LinearLayout>
    </RelativeLayout>

</RelativeLayout>
