<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- Focused state - Blue border -->
    <item android:state_focused="true">
        <shape android:shape="rectangle">
            <solid android:color="#FFFFFF" />
            <corners android:radius="12dp" />
            <stroke android:width="3dp" android:color="#1976D2" />
            <padding android:left="16dp" android:right="16dp" android:top="12dp" android:bottom="12dp" />
        </shape>
    </item>

    <!-- Normal state - Light blue border -->
    <item>
        <shape android:shape="rectangle">
            <solid android:color="#FFFFFF" />
            <corners android:radius="12dp" />
            <stroke android:width="2dp" android:color="#BBDEFB" />
            <padding android:left="16dp" android:right="16dp" android:top="12dp" android:bottom="12dp" />
        </shape>
    </item>

</selector>